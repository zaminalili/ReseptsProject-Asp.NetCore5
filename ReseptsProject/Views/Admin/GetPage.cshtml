@*@model ReseptsProject.Models.Page*@
@model Page


@{
    ViewData["Title"] = "GetPage";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<script src="https://cdn.ckeditor.com/ckeditor5/35.3.2/classic/ckeditor.js"></script>

<h4>Səhifə redaktə</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="UpdatePage" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageId" />
            <div class="form-group mt-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Content" class="control-label"></label>
                @*<input asp-for="Content" class="form-control" required />*@
                <textarea asp-for="Content" id="editor" class="form-control"></textarea>
                <script>
                    ClassicEditor
                        .create(document.querySelector('#editor'))
                        .then(editor => {
                            console.log(editor);
                        })
                        .catch(error => {
                            console.error(error);
                        });
                </script>
                <span asp-validation-for="Content" class="text-danger"></span>   
            </div>
            <div class="form-group mt-2">
                <label asp-for="Active" class="control-label">Aktiv</label>
                <span asp-validation-for="Active" class="text-danger"></span>

                <select asp-for="Active" class="form-select form-select" aria-label=".form-select-sm example">
                    <option value="True" selected>Bəli</option>
                    <option value="False">Xeyr</option>

                </select>
            </div>
            <div class="form-group mt-3 d-flex justify-content-between">
                <input type="submit" value="Yadda saxla" class="btn btn-outline-primary" onclick="return confirm('Dəyişikliklər yadda saxlanılsın mı?')" />
                <a asp-action="Pages">Geri</a>
            </div>
        </form>
    </div>
</div>

