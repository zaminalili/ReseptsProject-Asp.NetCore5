@model ReseptsProject.Models.Category

@{
    ViewData["Title"] = "GetCategory";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<h4>Kateqoriya redaktə</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="UpdateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group mt-2">
                <label asp-for="CategoryName" class="control-label">Kateqoriya adı</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Active" class="control-label">Aktiv</label>
                <select asp-for="Active" class="form-select form-select" aria-label=".form-select-sm example">
                    <option value="True" selected>Bəli</option>
                    <option value="False">Xeyr</option>

                </select>
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3 d-flex justify-content-between">
                <input type="submit" value="Yadda saxla" class="btn btn-outline-primary" />
                <a asp-action="Categories">Geri</a>
            </div>
        </form>
    </div>
</div>